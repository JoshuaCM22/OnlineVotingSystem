
@{
    ViewData["Title"] = "Election Management";
}


@model IEnumerable<OnlineVotingSystem.Models.ViewModels.ElectionViewModel>


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="fw-bold">Election Management (@Model.Count())</h2>
    </div>
    <br>

    <a asp-action="CreateNewElection" class="btn btn-primary btn-md mb-3">Create New Election</a>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead style="background-color: #000; color: #fff;">
                <tr>
                    <th style="width: 13%;">Election ID</th>
                    <th>Election Name</th>
                    <th>Start Date Time</th>
                    <th>End Date Time</th>
                    <th style="width: 20%;">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var election in Model)
                    {
                        <tr>
                            <td>@election.ID</td>
                            <td>@election.Name</td>
                            <td>@election.StartDateTime.ToString("MMM dd, yyyy / hh:mm tt")</td>
                            <td>@election.EndDateTime.ToString("MMM dd, yyyy / hh:mm tt")</td>

                            @if (election.HasVoter)
                            {
                                <td class="disabled-action">
                                    ⚠ You cannot edit this election because it contains voters.
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a href="@Url.Action("EditElection", "Admin", new { electionId = election.ID })" class="btn btn-primary btn-md me-2">Edit</a>
                                    <a href="@Url.Action("DeleteElection", "Admin", new { electionId = election.ID })" class="btn btn-danger btn-md">Delete</a>
                                </td>
                            }

                        </tr>
                    } }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center fw-bold text-muted">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br>