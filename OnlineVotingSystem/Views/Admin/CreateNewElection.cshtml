@{
    ViewData["Title"] = "Create New Election";
}

@model OnlineVotingSystem.Models.ViewModels.ElectionViewModel

<h2 class="fw-bold">Create New Election</h2>

<form asp-action="CreateNewElection" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="max-width: 100%;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDateTime"></label>
            <input asp-for="StartDateTime" class="form-control" type="datetime-local" style="max-width: 30%;" />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDateTime"></label>
            <input asp-for="EndDateTime" class="form-control" type="datetime-local" style="max-width: 30%;" />
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="ElectionList" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
</form>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
