@{
    ViewData["Title"] = "Create New Candidate";
}

@model OnlineVotingSystem.Models.ViewModels.CandidateViewModel 

<h2 class="fw-bold">Create New Candidate</h2>

<form asp-action="CreateNewCandidate" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="max-width: 100%;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" style="max-width: 100%;" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ElectionID" class="control-label"></label>
            <select asp-for="ElectionID" asp-items="ViewBag.ElectionList" class="form-control">
                <option value="">Select Election Name</option>
            </select>
            <span asp-validation-for="ElectionID" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="CandidateList" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
</form>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
