@{
    ViewData["Title"] = "Delete Election";
}

@model OnlineVotingSystem.Models.ViewModels.ElectionViewModel

<h2 class="fw-bold">Delete Election Confirmation</h2>

<form asp-action="DeleteElection" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" style="max-width: 100%;" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="max-width: 100%;" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDateTime"></label>
            <input asp-for="StartDateTime" class="form-control" type="datetime-local" style="max-width: 30%;" readonly />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDateTime"></label>
            <input asp-for="EndDateTime" class="form-control" type="datetime-local" style="max-width: 30%;" readonly />
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
            <a asp-action="ElectionList" class="btn btn-danger">
                <i class="fa-solid fa-times"></i> Cancel
            </a>
        </div>

    </div>
</form>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
