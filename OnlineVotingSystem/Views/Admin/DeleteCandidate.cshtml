@{
    ViewData["Title"] = "Delete Candidate";
}

@model OnlineVotingSystem.Models.ViewModels.CandidateViewModel

<h2 class="fw-bold">Delete Candidate Confirmation</h2>

<form asp-action="DeleteCandidate" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" style="max-width: 100%;" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" style="max-width: 100%;" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" style="max-width: 100%;" readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ElectionID" class="control-label"></label>
            <select asp-for="ElectionID" asp-items="ViewBag.ElectionList" class="form-control" disabled>
                <option value="">Select Election Name</option>
            </select>
            <span asp-validation-for="ElectionID" class="text-danger"></span>
            <!-- Hidden input to submit value -->
            <input type="hidden" asp-for="ElectionID" />
        </div>


        <br />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
            <a asp-action="CandidateList" class="btn btn-danger">
                <i class="fa-solid fa-times"></i> Cancel
            </a>
        </div>
    </div>
</form>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
