@{
    ViewData["Title"] = "Dashboard";


    string fromDateValue = Context.Request.Query.ContainsKey("fromDate")
        ? Context.Request.Query["fromDate"].ToString()
        : DateTime.Now.AddMonths(-12).ToString("yyyy-MM-dd");

    string toDateValue = Context.Request.Query.ContainsKey("toDate")
        ? Context.Request.Query["toDate"].ToString()
        : DateTime.Now.ToString("yyyy-MM-dd");
}

@model OnlineVotingSystem.Models.ViewModels.Admin.DashboardViewModel


<h2 class="text-center"><i class="fa-solid fa-chart-line"></i> Dashboard</h2>
<hr>



    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-wrap justify-content-between align-items-end mb-3">
                <form method="get" asp-action="Dashboard" asp-controller="Admin" class="row g-2 w-100">
                    <div class="col-12 col-sm-12 col-md-3">
                        <label for="fromDate" class="form-label">From Date:</label>
                        <input type="date" id="fromDate" name="fromDate" class="form-control" value="@fromDateValue">
                    </div>
                    <div class="col-12 col-sm-12 col-md-3">
                        <label for="toDate" class="form-label">To Date:</label>
                        <input type="date" id="toDate" name="toDate" class="form-control" value="@toDateValue">
                    </div>

                    <div class="col-12 col-sm-12 col-md-3 d-flex align-items-end mt-3">

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search" style="margin-right: 5px;"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<br>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info shadow-lg">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt"></i> All Elections
                    </h5>
                    <h3 class="display-4">@Model.AllElections</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info shadow-lg">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user-tie"></i> All Candidates
                    </h5>
                    <h3 class="display-4">@Model.AllCandidates</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info shadow-lg">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-users"></i> All Voters
                    </h5>
                    <h3 class="display-4">@Model.AllVoters</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-lg" style="background-color : yellow; color: black;">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt"></i> Upcoming Elections
                    </h5>
                    <h3 class="display-4">@Model.UpcomingElections</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white shadow-lg" style="background-color: blue;">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt"></i> Ongoing Elections
                    </h5>
                    <h3 class="display-4">@Model.OngoingElections</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white shadow-lg" style="background-color: green;">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt"></i> Completed Elections
                    </h5>
                    <h3 class="display-4">@Model.CompletedElections</h3>
                </div>
            </div>
        </div>
    </div>
